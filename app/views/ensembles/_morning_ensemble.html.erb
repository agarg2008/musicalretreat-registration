    <td><%= form.radio_button :large_ensemble_choice, 3 %></td>
  </tr>
</table>

<% elsif ensemble_primary.registration.instrument.large_ensemble == "band" %>

<table class="eval-table">
  <tr><th colspan="1">Ensemble Choice</th></tr>
  <tr><td>Symphonic Band </td></tr>
  <tr><td><%= form.radio_button :large_ensemble_choice, 2, {:checked => true} %></td></tr>
</table>

<% elsif ensemble_primary.registration.instrument.large_ensemble == "festival_or_string_orchestra" %>

<table class="eval-table">
  <tr><th colspan="3">Ensemble Choice</th></tr>
  <tr>
    <td>Festival Orchestra </td>
    <td>String Orchestra </td>
    <td>Either Festival or String Orchestra </td>
  <tr>
    <td><%= form.radio_button :large_ensemble_choice, 3, {:checked => true} %></td>
    <td><%= form.radio_button :large_ensemble_choice, 5 %></td>
    <td><%= form.radio_button :large_ensemble_choice, 6 %></td>
  </tr>
</table>

