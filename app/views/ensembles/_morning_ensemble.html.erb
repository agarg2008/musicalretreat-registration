<table class="eval-table">
  <tr><th colspan="1">Ensemble Choice</th></tr>
  <tr><td>Festival Chorus </td></tr>
  <tr><td><%= form.radio_button :large_ensemble_choice, 4, {:checked => true} %></td></tr>
</table>

