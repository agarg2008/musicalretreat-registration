<% if instrument.string? && !instrument.piano? %>

<p>
What part would you prefer to play in the orchestra? &nbsp;&nbsp;&nbsp;
</p>
<table>
<tr><td>No Preference</td><td>First</td><td>Second</td></tr>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 0, {:checked => true} %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 1 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 2 %></td>
</tr>
</table>

<% elsif  instrument.flute? %>

<p>
Please indicate your seating preference for Symphonic Band
</p>

<table>
<tr><td>No Preference</td><td>First Flute</td><td>Second Flute</td><td>Piccolo</td></tr>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 0, {:checked => true} %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 1 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 2 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 10 %></td>
</tr>
</table>

<% elsif  instrument.clarinet? %>
<p>
Please indicate your seating preference for Symphonic Band
</p>

<table>
<tr><td>No Preference</td><td>First</td><td>Second</td><td>Third</td></tr>
<tr>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 0, {:checked => true} %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 1 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 2 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 3 %></td>
</tr>
</table>

<% elsif  instrument.saxophone_nonspecific? %>
<p>
Please indicate your preferred saxophone voice for Symphonic Band:
</p>

<table>
<tr><td>Soprano</td><td>Alto</td><td>Tenor</td><td>Baritone</td></tr>
<tr>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 100 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 101 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 102 %></td>
  <td style="text-align: center;"><%= form.radio_button :large_ensemble_part, 103 %></td>
</tr>
</table>
<% end %>

