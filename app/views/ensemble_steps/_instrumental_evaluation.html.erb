<table width="100%">
  <tr class="reg-form-section-title">
    <td>
      Evaluation for <%= instrument.display_name %>
    </td>
  </tr>
  <tr>
    <td class="reg-form-column">

      <% if instrument.string? %>
        <%= render partial: "string_evaluation", locals: {instrument: instrument, form: form} %>
      <% elsif instrument.brass? || instrument.woodwind? %>
        <%= render partial: "wind_evaluation", locals: {instrument: instrument, form: form} %>
      <% else %>
        <%= render partial: "percussion_evaluation", locals: {instrument: instrument, form: form} %>
      <% end %>
    </td>
  </tr>
</table>

