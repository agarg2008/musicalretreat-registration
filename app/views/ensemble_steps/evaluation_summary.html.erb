<div id="main">
  <%= render partial: 'shared/errors', locals: { subject: @ensemble_primary } %>
  <div id="reg-form-main" class='elective-evaluations'>
    <table width="100%">
      <tr class="reg-form-section-title">
        <td>
          Ensemble Preferences Summary
        </td>
      </tr>
      <tr>
        <td class="reg-form-column">
          <p>Thank you;  your ensemble and elective preferences and self-evaluations are complete</p>
          <%= render partial: 'summary_informations', locals: {ensemble_primary: @ensemble_primary} %>
          <%= form_for @ensemble_primary, url: wizard_path, method: :put do |form| %>
            <%= form.label :comments, 'Tell us anything else you want to say:' %>
            <br />
            <%= form.text_area :comments, cols: 60, rows: 5 %>

          <p>
          To finish the process, please read and acknowledge the
          <%= link_to 'MMR Waiver and Release', '/terms/Release2015.pdf', target: :blank %>
          </p>

          <p>
          I have read and acknowlege the Waiver and Release &nbsp;&nbsp;&nbsp
          <%= check_box_tag :terms %>
          </p>
          <% end %>

          <table width="75%">
            <tr>
              <td width="50%"><button class='submit-ensemble' disabled>DONE</button></td>
              <td width="50%"><%= button_to "CANCEL", ensemble_path(@ensemble_primary), method: :delete %></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
</div>
