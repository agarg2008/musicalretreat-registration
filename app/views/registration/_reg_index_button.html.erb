<% if action %>
<td class="bordered", width="50%"><%= text %>
<p/>
<% if action %>
  <% if method %>
     <%= button_to "GO", :action => action, :method => method %>
  <% else %>
     <%= button_to "GO", :action => action %>
  <% end %>
<% else %>
  <%= button_tag "NO" %>
<% end %>
</td>   
<% else %>
<td class="bordered", width="50%">
</td>
<% end %>


