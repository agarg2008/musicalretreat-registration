<% es = evaluation_summary;  ep = es.ensemble_primary %>

<table width="100%" class="admin-reports admin-reports-show space-below border-below">
  <tr class="reg-form-section-title">
    <td>
      Self Evaluation / <%= ep.display_name %> / <%= es.instrument.display_name %>
    </td>
  </tr>
<tr><td>
<ul>

<li>Contact Info: <%= ep.display_name %>, <%= ep.email %>, <%= number_to_phone(ep.phone_number) %></li>

<!-- composers -->
<% unless es.composers.blank? %>
<li>Favorite composers and pieces for practice <div class="eval-report-comment-box"><%= es.composers %></div></li>
<% end %>

<!-- chamber_ensemble_part -->
<% unless es.chamber_ensemble_part.blank? %>
<li>Chamber music part preference: <%= es.radio_button_text(:chamber_ensemble_part) %></li>
<% end %>

<!-- groups -->
<% unless es.groups.blank? %>
<li>Groups (audition <% if es.require_audition %>yes<% else %>no<% end %>)
   <div class="eval-report-comment-box"><%= es.groups %></div>
</li>
<% end %>

<!-- transposition -->
<% unless es.text_for(:transposition).blank? %>
<li>Transposition: <%= es.text_for(:transposition) %></li>
<% end %>

<!-- practice_frequency -->
<li>Practice Frequency: <%= es.radio_button_text(:practicing_how_much) %></li>

<!-- private_study -->
<li>Private Study: <% if es.studying_privately %>Yes<% else %>No<% end %> 
  <% unless es.studying_privately_how_long.blank? %>(<%= es.studying_privately_how_long %>)<% end %></li>

<!-- chamber_frequency -->
<% unless es.radio_button_text(:chamber_music_how_often).blank? %>
<li>Chamber music frequency: <%= es.radio_button_text(:chamber_music_how_often) %></li>
<% end %>

<!-- other_instruments -->
<% unless es.text_for(:other_instruments).blank? %>
<li>Also Bringing: <%= es.text_for(:other_instruments) %></li>
<% end %>

<!-- can_read_in_position -->
<% unless es.text_for(:positions).blank? %>
<li>Can read in: <%= es.text_for(:positions) %></li>
<% end %>

<!-- jazz_experience -->
<% unless es.text_for(:jazz).blank? %>
<li>Jazz interest and experience: <%= es.text_for(:jazz) %></li>
<% end %>

<!-- overall_rating_large_ensemble overall_rating_chamber overall_rating_sightreading -->
<% unless es.radio_button_text(:overall_rating_large_ensemble).blank? %>
<li>Self assessment band/orchestra/chorus: <%= es.radio_button_text(:overall_rating_large_ensemble) %></li>
<% end %>

<% unless es.radio_button_text(:overall_rating_chamber).blank? %>
<li>Self assessment chamber music: <%= es.radio_button_text(:overall_rating_chamber) %></li>
<% end %>

<% unless es.radio_button_text(:overall_rating_sightreading).blank? %>
<li>Self assessment sightreading: <%= es.radio_button_text(:overall_rating_sightreading) %></li>
<% end %>

</ul>
</td></tr>
</table>
